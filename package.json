{
	"name": "borderless",
	"displayName": "Window Border Toggler",
	"description": "VS Code Extension to set window to borderless on Windows platform.",
	"version": "0.0.1",
	"publisher": "vhanla",
	"license": "MIT",
	"engines": {
		"vscode": "^1.12.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/vhanla/vscode-borderless.git"
	},
	"bugs": {
		"url": "https://github.com/vhanla/vscode-borderless/issues",
		"email": "vhanla@gmail.com"
	},
	"activationEvents": [
		"*"
	],
	"main": "./extension",
	"contributes": {
		"configuration": {
			"title": "Window Borderless configuration",
			"properties": {
				"borderless.on": {
					"type": "integer",
					"default": 1,
					"description": "Enable Window's border"
				},
				"borderless.off": {
					"type": "integer",
					"default": 0,
					"description": "Disable Window's border"
				}
			}
		},
		"commands": [
			{
				"command": "borderless.on",
				"title": "Borderless: Hide Window's Border"
			},
			{
				"command": "borderless.off",
				"title": "Borderless: Show Window's Border"
			}
		],
		"keybindings": [
			{
				"command": "borderless.on",
				"key": "shift+F11"
			},
			{
				"command": "borderless.off",
				"key": "shift+F12"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"vscode": "^1.0.0"
	},
	"dependencies": {
		"node-powershell": "^3.1.1"
	}
}
